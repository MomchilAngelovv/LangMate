@model LangMate.Web.Models.Home.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form asp-controller="Home" asp-action="Dashboard" method="post" enctype="application/x-www-form-urlencoded">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="TextFrom" class="text-white"></label>
		<input asp-for="TextFrom" class="form-control" />
		<span asp-validation-for="TextFrom" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="LanguageFrom" class="text-white"></label>
		<input asp-for="LanguageFrom" class="form-control" />
		<span asp-validation-for="LanguageFrom" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="LanguageTo" class="text-white"></label>
		<input asp-for="LanguageTo" class="form-control" />
		<span asp-validation-for="LanguageTo" class="text-danger"></span>
	</div>
	@if (Model.TranslateSuccess)
	{
		<div class="form-group">
			<label asp-for="TextTo" class="text-white"></label>
			<input asp-for="TextTo" class="form-control" />
			<span asp-validation-for="TextTo" class="text-danger"></span>
		</div>
	}
	<div class="form-group">
		<button type="submit" class="btn btn-success col-12">Translate</button>
	</div>
</form>
